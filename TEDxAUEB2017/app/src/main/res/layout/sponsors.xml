<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SponsorsActivity">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:isScrollContainer="true"    >

    <TextView
        android:text="@string/Auspices"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:id="@+id/auspices"
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter" />
    <TextView
        android:text="@string/Platinum"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"  />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/platinumGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:isScrollContainer="false"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Gold"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"  />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/goldGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:isScrollContainer="false"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Silver"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/silverGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:isScrollContainer="false"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Friends"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/friendsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:isScrollContainer="false"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Academic"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <ImageView
        android:id="@+id/academic"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/orange"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitCenter" />
    <TextView
        android:text="@string/InKind"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/inkindGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:isScrollContainer="false"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="1dp"
        />
    <TextView
        android:text="@string/Community"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView
        android:id="@+id/communityGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:isScrollContainer="false"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Workshops"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView

        android:id="@+id/workshopsGrid"
        android:isScrollContainer="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        />
    <TextView
        android:text="@string/Media"
        android:background="@color/orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Helpers.ExpandableHeightGridView

        android:id="@+id/mediaGrid"
        android:isScrollContainer="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        />
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>